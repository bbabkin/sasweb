- @page_title = "Delete Event"
= link_to("<< Back to List", {:action => 'index',}, :class => 'back-link')
.news.delete
  %h2 Delete News Article
  = form_for(:product, :method => :delete, :url => {:action => 'destroy', :id => @eventitem.id}) do |f|
    %p Are you sure you want to permanently delete this event?
    %p.reference-name= @eventitem.short_entry
    .form-buttons
      = submit_tag("Delete Event")
