- @page_title = "News"
.news.index
  = link_to("Add new article", {:action => 'new'}, :class => 'btn btn-xs btn-success') 
  
  %table.admintable{:summary => "Article list"}
    %tr.header
      %th ID;
      %th Date created
      %th short description
      %th Actions
    - @newsitems.each do |newsitem|
      %tr{:class => cycle('odd', 'even')}
        %td= newsitem.id
        %td= newsitem.created_at
        %td= newsitem.short_entry
        %td.actions
          = link_to("Show", admin_news_item_path(newsitem), class: "btn btn-xs btn-default")
          = link_to("Edit", edit_admin_news_item_path(newsitem), class: "btn btn-xs btn-default")
          = link_to("Delete", delete_admin_news_item_path(newsitem), class: "btn btn-xs btn-danger")


