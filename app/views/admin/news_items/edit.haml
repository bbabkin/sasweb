- @page_title = "Update Article"
= link_to("<< Back to News Article List", {:action => 'index', :class => 'back-link'})
.news.new
  %h2 Update Article
  = form_for [:admin, @newsitem], :html => {:multipart => true} do |f|
    = render(:partial => "form", :locals => {:f => f})
    .form-buttons
      = submit_tag("update article")
