- @page_title = "Shares"
.news.index
  = link_to("Add new header (not recommended)", {:action => 'new'}, :class => 'btn btn-xs btn-success') 
  
  %table.admintable{:summary => "Headers"}
    %tr.header
      %th ID;
      %th Location
      %th Content
      %th Actions
    - @headers.each do |header|
      %tr{:class => cycle('odd', 'even')}
        %td= header.id
        %td= header.name
        %td= header.content
        %td.actions
          = link_to("Edit", edit_admin_header_path(header), class: "btn btn-xs btn-default")
          = link_to("Delete", delete_admin_header_path(header), class: "btn btn-xs btn-danger")


