- @page_title = "Admin Users List"
%h2 Admin Users
= link_to('Add New Admin User', {:action => 'new'}, :class => 'action new')
%div
	= pluralize(@admin_users.size, 'admin user')
	found
%table.admintable{:summary => "Admin users list"}
	%tr
		%th Username
		%th Actions
	- @admin_users.each do |admin_user|
		%tr{:class => cycle('odd', 'even')}
			%td= admin_user.username
			%td.actions
				= link_to('Edit', {:action => 'edit', :id => admin_user.id}, class: 'btn btn-xs btn-default')
				= link_to('Delete', [:admin, admin_user], method: :delete, remote: true, class: 'btn btn-xs btn-danger', confirm: "You sure?")